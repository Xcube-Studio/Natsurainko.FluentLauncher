<Page
    x:Class="Natsurainko.FluentLauncher.Views.Activities.ActivitiesNavigationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Natsurainko.FluentLauncher.Views.Activities"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    mc:Ignorable="d">

    <Grid Margin="0,5,0,0">
        <NavigationView
            x:Name="NavigationView"
            IsBackButtonVisible="Collapsed"
            IsSettingsVisible="False"
            ItemInvoked="NavigationView_ItemInvoked"
            PaneDisplayMode="Top">
            <NavigationView.MenuItems>
                <NavigationViewItem
                    x:Uid="Activities_ActivitiesNavigationPage_NV_Item1"
                    Content="Launch Task"
                    IsSelected="True"
                    Tag="Natsurainko.FluentLauncher.Views.Activities.LaunchPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xe945;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Uid="Activities_ActivitiesNavigationPage_NV_Item2"
                    Content="Download Task"
                    Tag="Natsurainko.FluentLauncher.Views.Activities.DownloadPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xe896;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Uid="Activities_ActivitiesNavigationPage_NV_Item3"
                    Content="News"
                    Tag="Natsurainko.FluentLauncher.Views.Activities.NewsPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xed0c;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
                <NavigationViewItem
                    x:Uid="Activities_ActivitiesNavigationPage_NV_Item4"
                    Content="Application"
                    IsEnabled="False"
                    Tag="Natsurainko.FluentLauncher.Views.Activities.ApplicationPage">
                    <NavigationViewItem.Icon>
                        <FontIcon Glyph="&#xe12a;" />
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>
            <Frame x:Name="contentFrame" Navigated="ContentFrame_Navigated" />
        </NavigationView>
    </Grid>
</Page>
