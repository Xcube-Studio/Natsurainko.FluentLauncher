<Page
    x:Class="Natsurainko.FluentLauncher.Views.AuthenticationWizard.EnterYggdrasilProfilePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Natsurainko.FluentLauncher.Views.AuthenticationWizard"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Background="Transparent"
    Tag="Enter Yggdrasil Account Profile (3/4)"
    mc:Ignorable="d">

    <StackPanel Spacing="10">
        <TextBox
            x:Uid="Settings_Yggdrasil_Url"
            BorderBrush="{ThemeResource ButtonBorderBrush}"
            PlaceholderText="Yggdrasil Server Url:"
            Text="{Binding Url, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <TextBox
            x:Uid="Settings_Yggdrasil_Login"
            BorderBrush="{ThemeResource ButtonBorderBrush}"
            PlaceholderText="Email:"
            Text="{Binding Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <PasswordBox
            x:Uid="Settings_Yggdrasil_Password"
            BorderBrush="{ThemeResource ButtonBorderBrush}"
            Password="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            PlaceholderText="Password:" />
    </StackPanel>
</Page>
