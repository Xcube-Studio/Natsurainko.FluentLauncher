<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="Natsurainko.FluentLauncher.Views.Downloads.ResourceDefaultPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:baseVM="using:Natsurainko.FluentLauncher.ViewModels.Downloads"
    xmlns:behaviors="using:Natsurainko.FluentLauncher.Xaml.Behaviors"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:Natsurainko.FluentLauncher.Views.Downloads"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resources="using:Nrk.FluentCore.Resources"
    xmlns:selector="using:Natsurainko.FluentLauncher.Xaml.Selectors"
    xmlns:toolkit_behaviors="using:CommunityToolkit.WinUI.Behaviors"
    mc:Ignorable="d">

    <ListView
        x:Name="ListView"
        Padding="40,0,40,25"
        ItemTemplateSelector="{StaticResource ResourceTemplateSelector}"
        ItemsSource="{x:Bind VM.SearchResult, Mode=OneWay}"
        SelectionMode="None">
        <ListView.Header>
            <StackPanel MaxWidth="1000">
                <StackPanel.ChildrenTransitions>
                    <EntranceThemeTransition FromVerticalOffset="50" />
                    <RepositionThemeTransition IsStaggeringEnabled="False" />
                </StackPanel.ChildrenTransitions>
                <i:Interaction.Behaviors>
                    <toolkit_behaviors:FadeHeaderBehavior />
                </i:Interaction.Behaviors>

                <TextBlock
                    x:Name="SearchTextBlock"
                    Margin="0,0,0,16"
                    x:Load="{x:Bind VM.Searched, Mode=OneWay}"
                    Style="{ThemeResource TitleTextBlockStyle}">
                    <Run Text="&quot;" /><Run Text="{x:Bind VM.SearchQuery, Mode=OneWay}" /><Run Text="&quot;" />
                </TextBlock>

                <controls:WrapPanel
                    Margin="0,0,0,16"
                    HorizontalSpacing="16"
                    VerticalSpacing="16">
                    <controls:Segmented SelectedIndex="{x:Bind VM.ResourceSource, Mode=TwoWay}">
                        <controls:SegmentedItem>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="14" Glyph="&#xe774;" />
                                <TextBlock Text="CurseForge" />
                            </StackPanel>
                        </controls:SegmentedItem>
                        <controls:SegmentedItem>
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon FontSize="14" Glyph="&#xe774;" />
                                <TextBlock Text="Modrinth" />
                            </StackPanel>
                        </controls:SegmentedItem>
                    </controls:Segmented>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon
                            FontSize="14"
                            Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                            Glyph="&#xe71d;" />
                        <TextBlock
                            x:Uid="Downloads_ResourceDefaultPage_Text1"
                            VerticalAlignment="Center"
                            Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                            Text="Category" />
                        <ComboBox ItemsSource="{x:Bind VM.Categories, Mode=OneWay}" SelectedItem="{x:Bind VM.SelectedCategory, Mode=TwoWay}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate x:DataType="x:String">
                                    <TextBlock Text="{x:Bind Converter={StaticResource ResourceLocalizedCategoriesConverter}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon
                            FontSize="14"
                            Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                            Glyph="&#xe71c;" />
                        <TextBlock
                            x:Uid="Downloads_ResourceDefaultPage_Text2"
                            VerticalAlignment="Center"
                            Foreground="{ThemeResource ApplicationSecondaryForegroundThemeBrush}"
                            Text="Version" />
                        <ComboBox
                            x:Name="VersionComboBox"
                            IsEditable="True"
                            ItemsSource="{x:Bind baseVM:ResourceDefaultViewModel.MinecraftVersions}"
                            Text="{x:Bind VM.FilteredVersion, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </controls:WrapPanel>

                <ProgressRing
                    x:Name="ProgressRing"
                    Width="32"
                    Height="32"
                    Margin="0,32,0,0"
                    x:Load="{x:Bind VM.Loading, Mode=OneWay}"
                    IsActive="{x:Bind VM.Loading, Mode=OneWay}" />

                <StackPanel
                    x:Name="EmptyStackPanel"
                    Margin="0,60"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    x:Load="{x:Bind VM.Searched, Mode=OneWay}"
                    Spacing="4">
                    <StackPanel
                        HorizontalAlignment="Center"
                        Orientation="Horizontal"
                        Spacing="8">
                        <FontIcon FontSize="32" Glyph="&#xe74c;" />
                        <TextBlock
                            x:Uid="Downloads_ResourceDefaultPage_Text3"
                            Margin="0,-4,0,0"
                            FontSize="28"
                            Style="{ThemeResource BaseTextBlockStyle}"
                            Text="No results found" />
                    </StackPanel>
                    <HyperlinkButton
                        x:Uid="Downloads_ResourceDefaultPage_Text4"
                        Padding="5,0,5,0.5"
                        HorizontalAlignment="Center"
                        Command="{x:Bind VM.ClearSearchQueryCommand}">
                        <TextBlock Text="Try other" />
                    </HyperlinkButton>

                    <i:Interaction.Behaviors>
                        <behaviors:EmptyListVisibleBehavior IsObservableCollection="False" ItemsSource="{x:Bind VM.SearchResult, Mode=OneWay}" />
                    </i:Interaction.Behaviors>
                </StackPanel>
            </StackPanel>
        </ListView.Header>

        <ListView.ItemContainerStyle>
            <Style TargetType="ListViewItem">
                <Setter Property="Margin" Value="0,2" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                <Setter Property="MaxWidth" Value="1000" />
            </Style>
        </ListView.ItemContainerStyle>

        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="LayoutVisualStates">
                <VisualState x:Name="WideLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger>
                            <AdaptiveTrigger.MinWindowWidth>
                                <x:Double>641</x:Double>
                            </AdaptiveTrigger.MinWindowWidth>
                        </AdaptiveTrigger>
                    </VisualState.StateTriggers>
                </VisualState>
                <VisualState x:Name="NarrowLayout">
                    <VisualState.StateTriggers>
                        <AdaptiveTrigger MinWindowWidth="0" />
                    </VisualState.StateTriggers>
                    <VisualState.Setters>
                        <Setter Target="ListView.Padding" Value="20,0,20,20" />
                    </VisualState.Setters>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
    </ListView>
</Page>
