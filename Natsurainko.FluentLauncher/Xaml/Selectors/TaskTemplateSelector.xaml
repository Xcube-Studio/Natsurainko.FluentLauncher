<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:selectors="using:Natsurainko.FluentLauncher.Xaml.Selectors">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Xaml/Templates/LaunchTaskItemControlTemplate.xaml" />
        <ResourceDictionary Source="/Xaml/Templates/DownloadResourceTaskItemControlTemplate.xaml" />
        <ResourceDictionary Source="/Xaml/Templates/InstallInstanceTaskItemControlTemplate.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <selectors:TaskTemplateSelector
        x:Key="TaskTemplateSelector"
        DownloadResourceTask="{StaticResource DownloadResourceTaskItemControlTemplate}"
        InstallInstanceTask="{StaticResource InstallInstanceTaskItemControlTemplate}"
        LaunchTask="{StaticResource LaunchTaskItemControlTemplate}" />
</ResourceDictionary>
