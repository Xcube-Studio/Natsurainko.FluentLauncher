<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:behaviors="using:Natsurainko.FluentLauncher.XamlHelpers.Behaviors"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:resources="using:Nrk.FluentCore.Resources"
    xmlns:selectors="using:Natsurainko.FluentLauncher.XamlHelpers.Selectors"
    xmlns:usercontrols="using:Natsurainko.FluentLauncher.UserControls">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/XamlHelpers/Templates/CurseForgeResourceItemControlTemplate.xaml" />
        <ResourceDictionary Source="/XamlHelpers/Templates/ModrinthResourceItemControlTemplate.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <selectors:ResourceTemplateSelector
        x:Key="ResourceTemplateSelector"
        CurseForgeTemplate="{StaticResource CurseForgeResourceItemControlTemplate}"
        ModrinthTemplate="{StaticResource ModrinthResourceItemControlTemplate}" />
</ResourceDictionary>
